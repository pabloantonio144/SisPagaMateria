<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dtec.sispagarmateria.CadastroPeriodos">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Escolha Seu Período"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_orange_dark" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#0c1ff0" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#0a1ef8" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton3"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#0b1ff8" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton4"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#091cf2" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton5"
        android:layout_below="@+id/radioButton4"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#0d11f3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton6"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#070ee3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton7"
        android:layout_below="@+id/radioButton6"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#070ee3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton8"
        android:layout_below="@+id/radioButton7"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#070ee3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton9"
        android:layout_below="@+id/radioButton8"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#070ee3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10° PERÍODO"
        android:textStyle="bold"
        android:id="@+id/radioButton10"
        android:layout_below="@+id/radioButton9"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:typeface="serif"
        android:textColor="#070ee3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENVIAR"
        android:id="@+id/button"
        android:layout_below="@+id/radioButton10"
        android:layout_centerHorizontal="true"
        android:background="#eba00c" />
</RelativeLayout>
